@model IEnumerable<ProyectoReservas.Models.Entidades.Restaurante>
@{
    ViewData["Title"] = "ListadoRestaurantes";
}

@if (TempData["ALertMessage"] != null)
{
    <div class=" alert alert-success">
        <strong> Ok!!---</strong>@TempData["AlertMessage"]
    </div>
}

<p>
    <a onclick="showInPopup('@Url.Action("Crear", "Restaurantes",
    new { id = 0 }, Context.Request.Scheme)' ,
    '')" class="btn btn-sm btn-primary text-white">
        <i class="fa fa-plus-circle"></i> Agregar un restaurante
    </a>
</p>

<div class="col-md-12">
    <div class="card">
        <div class=" card-header text-center">
            <h5>Lista de Restaurantes</h5>
        </div>
        <div class=" card-body">
            <table id="restaurante" class="table table-hover table responsive table stripped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre Del Restaurante</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Foto del restaurante</th>
                        <th scope="col">Mesa</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.IdRestaurante</th>
                            <td> @Html.DisplayFor(modelItem => item.NombreRestaurante)</td>
                            <td> @Html.DisplayFor(modelItem => item.Direccion)</td>
                            <td> @Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>
                                <img src="@item.URLFotoRestaurante" width="100" height="100">
                            </td>
                            <td> @Html.DisplayFor(modelItem => item.MesaId)</td>
                           

                            <td>
                                <a onclick="showInPopup('@Url.Action("Editar", "Restaurantes",
                                new { id = item.IdRestaurante }, Context.Request.Scheme)' ,
                                  'Actualizar Restaurante')" class="btn btn-outline-warning btn-sm">
                                    <i class="fa fa-pencil-alt"></i>
                                </a>
                                <button data-id="@item.IdRestaurante"
                                        class="btn btn-outline-danger btn-sm deleteItem"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteDialog">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="_MostrarModal" />
<partial name="_ModalEliminar" />


@section Scripts {

    <script src="~/js/showmodal.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#libro').DataTable(
                {
                    "language": {
                        url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                    },
                });
        });
    </script>

    <script>
        sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Restaurantes/Eliminar/', false);
    </script>
}



