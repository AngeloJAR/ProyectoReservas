@model ProyectoReservas.Models.Entidades.Restaurante
@{
    ViewData["Title"] = "Editar";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class=" col-md-12">

        <div class=" card">

            <div class=" card-header text-center">

                <h5> Editar Restaurante</h5>

            </div>

            <div class=" card-body text-center">

                <form asp-controller="Restaurantes" asp-action="Editar" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="IdRestaurante" />

                    <div class="form-group">

                        <label></label>

                        <input asp-for="NombreRestaurante" class="form-control" placeholder=" NombreRestaurante" />

                        <span asp-validation-for="NombreRestaurante" class="text-danger"></span>

                    </div>


                    <div class="form-group">

                        <label></label>

                        <input asp-for="Direccion" class="form-control" placeholder=" Direccion" />

                        <span asp-validation-for="Direccion" class="text-danger"></span>

                    </div>

                    <div class="form-group">

                        <label></label>

                        <input asp-for="Telefono" class="form-control" placeholder=" Telefono" />

                        <span asp-validation-for="Telefono" class="text-danger"></span>

                    </div>
                    <div class="form-group">

                        <label></label>

                        <input asp-for="URLFotoRestaurante" type="file" class="form-control mb-3" name="Imagen" id="fileInput" placeholder="URLFotoRestaurante" />

                        <span asp-validation-for="URLFotoRestaurante" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label></label>
                        <select asp-for="MesaId" class="form-control" required>
                            @if (Model != null && Model.Mesas != null)
                            {
                                foreach (var mesa in Model.Mesas)
                                {
                                    <option value="@mesa.Value">@mesa.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="MesaId" class="text-danger"></span>
                    </div>

                    <div class=" card-footer ">

                        <div class="form-group">

                            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>

                            <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>

                        </div>

                    </div>

                </form>

            </div>

        </div>

    </div>
</body>
</html>
